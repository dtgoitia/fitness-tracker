#!/usr/bin/env bash

set -o errexit
set -o pipefail
set -o nounset

current_dir="$(basename $(pwd))"

if [[ "$current_dir" == "api" ]]; then
    # Move to the root of the monorepo
    cd ..
fi

db_file="api/${DB_PATH}"
rm "${db_file}"
touch "${db_file}"

api/bin/local/migrate_db

source api/bin/dev/_activate_venv
cd api
pytest -vv -s tests
